<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".framework.view.proyectoindividualorganizador.Proyecto_individual_organizador_activity"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:id="@+id/Tarjeta_Principal"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:background="#90000000"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/Nombre_Evento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del evento"
                    android:textAlignment="center"
                    android:textColor="@color/grayBtn"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/CuentaRegresiva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:autoSizeTextType="uniform"
                    android:text="00:00:00"
                    android:textAlignment="center"
                    android:textColor="@color/grayBtn"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dias: Horas: Minutos"
                    android:textAlignment="center"
                    android:textColor="@color/grayBtn"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/Actividades_Completadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Actividades completadas:"
                    android:textAlignment="center"
                    android:textColor="@color/grayBtn"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Actividades_porCompletar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Actividades por completar:"
                    android:textAlignment="center"
                    android:textColor="@color/grayBtn"
                    android:textSize="20dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_below="@id/Tarjeta_Principal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <Button
                android:id="@+id/Actividades"
                android:layout_width="160dp"
                android:layout_height="400dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/carta_boleto_background"
                android:text="Button1">

            </Button>

            <Button
                android:id="@+id/Mis_Objetivos"
                android:layout_width="170dp"
                android:layout_height="400dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@null"
                android:background="@drawable/carta_boleto_background"
                android:text="Button">
            </Button>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>