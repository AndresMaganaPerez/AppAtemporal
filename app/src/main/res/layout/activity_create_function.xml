<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".framework.view.CreateEvent"
    android:orientation="vertical"
    android:background="#302E3B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">
        <include
            layout="@layout/header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id = "@+id/header">
        </include>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleCreateNewFunction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nueva FunciÃ³n"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="23dp"
                    tools:layout_editor_absoluteY="179dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/TextViewFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="Fecha del evento"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="23dp"
                    tools:layout_editor_absoluteY="179dp" />

                <DatePicker
                    android:id="@+id/datePicker1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    android:layout_gravity="center"
                    android:scaleX="0.9"
                    android:scaleY="0.9"/>


                <TextView
                    android:id="@+id/TextViewHoraInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="Hora de inicio"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="23dp"
                    tools:layout_editor_absoluteY="179dp" />



                <TimePicker
                    android:id="@+id/timePickerInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:theme="@style/TimePickerTheme"
                    android:timePickerMode="spinner" />

                <TextView
                    android:id="@+id/TextViewHoraFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Hora de fin"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="23dp"
                    tools:layout_editor_absoluteY="179dp" />

                <TimePicker
                    android:id="@+id/timePickerFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:theme="@style/TimePickerTheme"
                    android:timePickerMode="spinner" />

                <Button
                    android:id="@+id/submitBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="100dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/lblue_400"
                    android:text="Guardar" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
    <include
        layout="@layout/navbar"
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="bottom"
        />
</FrameLayout>