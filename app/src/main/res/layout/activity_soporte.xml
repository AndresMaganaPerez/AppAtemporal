<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    >

    <include
        android:id="@+id/header"
        layout="@layout/header"
        android:layout_height="80dp"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"/>

    <TextView
        android:id="@+id/tvSoporte_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soporte y Ayuda"
        android:textColor="#ffffff"
        android:fontFamily="@font/abel"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.14" />

    <android.widget.Button
        android:id="@+id/btnFAQ_3"
        android:layout_width="347dp"
        android:layout_height="55dp"
        android:background="@drawable/fade_shape"
        android:backgroundTint="@null"
        android:fontFamily="@font/abel"
        android:text="FAQ"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:cornerRadius="15dp"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSoporte_3"
        app:layout_constraintVertical_bias="0.1"
        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"/>

    <android.widget.Button
        android:id="@+id/btnContacto_3"
        android:layout_width="347dp"
        android:layout_height="55dp"
        android:background="@drawable/fade_shape"
        android:backgroundTint="@null"
        android:fontFamily="@font/abel"
        android:text="Contáctanos"
        android:textAllCaps="false"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:cornerRadius="15dp"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSoporte_3"
        app:layout_constraintVertical_bias="0.25"
        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"/>

    <android.widget.Button
        android:id="@+id/btnTerminos_3"
        android:layout_width="347dp"
        android:layout_height="55dp"
        android:background="@drawable/fade_shape"
        android:backgroundTint="@null"
        android:fontFamily="@font/abel"
        android:text="Términos y Condiciones"
        android:textAllCaps="false"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:cornerRadius="15dp"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSoporte_3"
        app:layout_constraintVertical_bias="0.4"
        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"/>

    <android.widget.Button
        android:id="@+id/btnFallas_3"
        android:layout_width="347dp"
        android:layout_height="55dp"
        android:background="@drawable/fade_shape"
        android:backgroundTint="@null"
        android:fontFamily="@font/abel"
        android:text="Reportar Fallas"
        android:textAllCaps="false"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:cornerRadius="15dp"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSoporte_3"
        app:layout_constraintVertical_bias="0.55"
        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"/>

    <include
        layout="@layout/navbar"
        app:layout_constraintVertical_bias="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>