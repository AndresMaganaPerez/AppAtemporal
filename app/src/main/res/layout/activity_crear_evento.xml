<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".framework.view.CreateEvent"
    android:orientation="vertical"
    android:background="#302E3B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id = "@+id/header">
        </include>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/titleCreateNewProject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crear Nuevo Evento"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            tools:ignore="MissingConstraints"
                            tools:layout_editor_absoluteX="23dp"
                            tools:layout_editor_absoluteY="179dp"
                            android:layout_gravity="center"/>

                        <EditText
                            android:id="@+id/Nombre_Evento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:backgroundTint="@color/white"
                            android:ems="15"
                            android:hint="@string/nameCreateNewProject"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.511"
                            app:layout_constraintStart_toStartOf="parent"></EditText>



                        <EditText
                            android:id="@+id/Direccion_Evento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:backgroundTint="@color/white"
                            android:ems="15"
                            android:hint="Direccion del evento"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.511"
                            app:layout_constraintStart_toStartOf="parent"></EditText>

                        <EditText
                            android:id="@+id/Ciudad_Evento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:backgroundTint="@color/white"
                            android:ems="15"
                            android:hint="Ciudad del evento"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.511"
                            app:layout_constraintStart_toStartOf="parent"></EditText>

                        <EditText
                            android:id="@+id/Ubicacion_Evento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:backgroundTint="@color/white"
                            android:ems="15"
                            android:hint="Ubicacion del evento"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.511"
                            app:layout_constraintStart_toStartOf="parent"></EditText>

                        <EditText
                            android:id="@+id/Artista_Evento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:backgroundTint="@color/white"
                            android:ems="15"
                            android:hint="Artista(s)"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.511"
                            app:layout_constraintStart_toStartOf="parent"></EditText>


                        <EditText
                            android:id="@+id/Estado_Evento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:backgroundTint="@color/white"
                            android:ems="15"
                            android:hint="Estado de la republica"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.511"
                            app:layout_constraintStart_toStartOf="parent"></EditText>

                        <EditText
                            android:id="@+id/URL_Video_Evento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:backgroundTint="@color/white"
                            android:ems="15"
                            android:hint="URL del video promocional"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.511"
                            app:layout_constraintStart_toStartOf="parent"></EditText>

                        <EditText
                            android:id="@+id/Descripcion_Evento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:backgroundTint="@color/white"
                            android:ems="15"
                            android:hint="Descripcion del evento"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.511"
                            app:layout_constraintStart_toStartOf="parent"></EditText>

                        <EditText
                            android:id="@+id/Hora_Evento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:backgroundTint="@color/white"
                            android:ems="15"
                            android:hint="Hora del evento"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.511"
                            app:layout_constraintStart_toStartOf="parent"></EditText>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/DateLayout"
                            style="@style/Widget.Design.TextInputLayout"
                            android:layout_width="310dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="55dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight="1"
                            android:background="#302E3B"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:boxStrokeColor="@color/colorAccent"
                            app:hintTextColor="@color/colorAccent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nameCreateNewProject">



                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dateEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:drawableEnd="@drawable/ic_date_range_black_24dp"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/white"
                            android:focusable="false"
                            android:hint="Selecciona una fecha para tu evento"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="20dp" />

                        </com.google.android.material.textfield.TextInputLayout>
                        <EditText
                            android:id="@+id/Status_Evento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:backgroundTint="@color/white"
                            android:ems="15"
                            android:hint="Activo/Inactivo"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.511"
                            app:layout_constraintStart_toStartOf="parent"></EditText>


                        <Spinner
                            android:id="@+id/TipoEvento"
                            android:layout_width="211dp"
                            android:layout_height="wrap_content"></Spinner>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <include
        layout="@layout/navbar"
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="bottom"
        />


</FrameLayout>